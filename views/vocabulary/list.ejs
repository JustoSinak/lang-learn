<% layout('layouts/main') -%>

<% content %>
<div class="bg-white rounded-lg shadow p-6">
  <h1 class="text-2xl font-bold mb-4">Your Vocabulary</h1>
  
  <% if (vocabulary.length > 0) { %>
    <div class="grid gap-4 md:grid-cols-2">
      <% vocabulary.forEach(word => { %>
        <div class="p-4 border rounded-lg hover:bg-gray-50">
          <h3 class="text-xl font-semibold"><%= word.word %></h3>
          <p class="text-gray-600"><%= word.definition %></p>
          <div class="mt-2 text-sm text-gray-500">
            Next review: <%= new Date(word.nextReview).toLocaleDateString() %>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-gray-600">No vocabulary items yet. Start adding words!</p>
  <% } %>
</div>
<% end %>