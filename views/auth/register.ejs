<% layout('layouts/main') -%>

<% content %>
<div class="max-w-md mx-auto bg-white rounded-lg shadow p-6">
  <h2 class="text-2xl font-bold mb-6 text-gray-800">Register</h2>
  <form action="/auth/register" method="POST">
    <div class="mb-4">
      <label class="block text-gray-700 mb-2">Email</label>
      <input type="email" name="email" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 mb-2">Password</label>
      <input type="password" name="password" class="w-full p-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    <button type="submit" class="w-full bg-blue-500 text-white p-2 rounded hover:bg-blue-600 transition">
      Create Account
    </button>
  </form>
</div>
<% end %>